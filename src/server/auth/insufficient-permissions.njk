{% extends 'layouts/page.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: "Access Restricted",
        classes: "govuk-panel--confirmation"
      }) }}

      <h2 class="govuk-heading-m">You don't have the required permissions</h2>
      
      <p class="govuk-body">You have successfully signed in as <strong>{{ user.name or user.email }}</strong>, but your account doesn't have the administrative permissions needed to access this area of the system.</p>
      
      {{ govukInsetText({
        text: "Administrative access is required to create projects, manage assessments, and perform other administrative functions."
      }) }}
      
      <h3 class="govuk-heading-s">What you can do:</h3>
      <ul class="govuk-list govuk-list--bullet">
        <li>View all projects and their current status</li>
        <li>Browse service standards and compliance assessments</li>
        <li>Review assessment history and project updates</li>
        <li>View profession information</li>
      </ul>
      
      <h3 class="govuk-heading-s">Need administrative access?</h3>
      <p class="govuk-body">If you believe you should have administrative access to this system, please contact your system administrator or IT support team.</p>
      
      <div class="govuk-button-group">
        {{ govukButton({
          text: "Continue to home page",
          href: "/",
          classes: "govuk-button--secondary"
        }) }}
        
        {{ govukButton({
          text: "View projects",
          href: "/projects"
        }) }}
      </div>
    </div>
  </div>
{% endblock %} 