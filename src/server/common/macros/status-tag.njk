{# Shared macro for rendering RAG status tags using GOV.UK Design System patterns #}
{% macro renderStatusTag(status) -%}
  {# Centralized status rendering with sentence case labels #}
  
  {%- if status == 'AMBER_RED' -%}
    <span class="app-tag-list">
      <strong class="govuk-tag govuk-tag--yellow">Amber</strong>
      <strong class="govuk-tag govuk-tag--red">Red</strong>
    </span>
  {%- elif status == 'GREEN_AMBER' -%}
    <span class="app-tag-list">
      <strong class="govuk-tag govuk-tag--green">Green</strong>
      <strong class="govuk-tag govuk-tag--yellow">Amber</strong>
    </span>
  {%- elif status == 'RED' -%}
    <strong class="govuk-tag govuk-tag--red">Red</strong>
  {%- elif status == 'AMBER' -%}
    <strong class="govuk-tag govuk-tag--yellow">Amber</strong>
  {%- elif status == 'GREEN' -%}
    <strong class="govuk-tag govuk-tag--green">Green</strong>
  {%- elif status == 'TBC' -%}
    <strong class="govuk-tag govuk-tag--blue">Pending</strong>
  {%- elif status == 'PENDING' -%}
    <strong class="govuk-tag govuk-tag--blue">Pending</strong>
  {%- elif status == 'EXCLUDED' -%}
    <strong class="govuk-tag govuk-tag--grey">Excluded</strong>
  {%- else -%}
    <strong class="govuk-tag govuk-tag--blue">Pending</strong>
  {%- endif -%}
{%- endmacro %}
