{% extends 'layouts/page.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/tag/macro.njk" import govukTag %}

{% block content %}
  {{ appHeading({
    text: heading
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if message %}
        <p class="govuk-body">{{ message }}</p>
      {% endif %}

      {% if professions and professions.length > 0 %}
        <div class="app-card-list">
          {% for profession in professions %}
            <div class="app-card">
              <h2 class="govuk-heading-m">
                <a href="/professions/{{ profession.id }}" class="govuk-link govuk-link--no-visited-state">
                  {{ profession.displayName }}
                </a>
              </h2>
              {% if profession.description %}
                <p class="govuk-body">{{ profession.description }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p class="govuk-body">No professions found.</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block pageStyles %}
<style>
  .app-card-list {
    margin-bottom: 30px;
  }
  
  .app-card {
    border: 1px solid #b1b4b6;
    padding: 20px;
    margin-bottom: 20px;
  }
  
  .app-card h2 {
    margin-top: 0;
    margin-bottom: 10px;
  }
  
  .app-card p:last-child {
    margin-bottom: 0;
  }
</style>
{% endblock %} 