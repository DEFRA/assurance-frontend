{% extends "layouts/page.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Projects",
        href: "/"
      },
      {
        text: project.name
      },
      {
        text: "Manage project",
        href: "/projects/" + project.id + "/manage"
      },
      {
        text: "Update project details"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  {% if notification %}
    {{ govukNotificationBanner({
      type: "success",
      titleText: "Success",
      text: notification
    }) }}
  {% endif %}

  <h1 class="govuk-heading-xl">Update Project Details</h1>
  <h2 class="govuk-heading-l govuk-!-margin-bottom-6">{{ project.name }}</h2>
  
  {% if errorMessage %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [
        {
          text: errorMessage
        }
      ]
    }) }}
  {% endif %}

  <form method="POST" novalidate>
    {{ govukInput({
      label: {
        text: "Project name",
        classes: "govuk-label--m"
      },
      id: "name",
      name: "name",
      value: values.name or project.name,
      errorMessage: errors.name,
      required: true
    }) }}

    {{ govukSelect({
      id: "phase",
      name: "phase",
      label: {
        text: "GDS Phase",
        classes: "govuk-label--m"
      },
      items: phaseOptions,
      errorMessage: errors.phase,
      required: true
    }) }}

    {{ govukInput({
      label: {
        text: "Project ID",
        classes: "govuk-label--m"
      },
      hint: {
        text: "Project identifier code"
      },
      id: "defCode",
      name: "defCode",
      value: values.defCode or project.defCode,
      errorMessage: errors.defCode,
      required: false
    }) }}

    {{ govukSelect({
      id: "deliveryGroupId",
      name: "deliveryGroupId",
      label: {
        text: "Delivery group",
        classes: "govuk-label--m"
      },
      hint: {
        text: "Select the delivery group responsible for this project"
      },
      items: deliveryGroupOptions,
      value: values.deliveryGroupId or project.deliveryGroupId,
      errorMessage: errors.deliveryGroupId,
      required: false
    }) }}

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Save changes"
      }) }}

      {{ govukButton({
        text: "Cancel",
        href: "/projects/" + project.id,
        classes: "govuk-button--secondary"
      }) }}
    </div>
  </form>

  {# 
  Delivery partner functionality temporarily disabled
  
  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <h2 class="govuk-heading-m">Delivery partner(s)</h2>
  
  {% if deliveryPartners and deliveryPartners.length > 0 %}
    {{ govukTable({
      head: [
        {
          text: "Delivery partner name"
        },
        {
          text: "Action"
        }
      ],
      rows: deliveryPartners | deliveryPartnerTableRows(project.id)
    }) }}
  {% else %}
    <p class="govuk-body">No delivery partners are currently assigned to this project.</p>
  {% endif %}

  <p class="govuk-body govuk-!-margin-top-4">
    <a href="/projects/{{ project.id }}/manage/delivery-partners/add" class="govuk-link">Add a delivery partner</a>
  </p>
  #}
{% endblock %} 