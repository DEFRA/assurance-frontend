{% extends 'layouts/page.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "status-tag.njk" import renderStatusTag %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Projects",
        href: "/"
      },
      {
        text: project.name,
        href: "/projects/" + project.id
      },
      {
        text: "Standard " + standard.number
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  {% if notification %}
    <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
      <div class="govuk-notification-banner__header">
        <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
          Success
        </h2>
      </div>
      <div class="govuk-notification-banner__content">
        <p class="govuk-notification-banner__heading">{{ notification }}</p>
      </div>
    </div>
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl">
        {{ project.name }}
      </h1>
      
      <h2 class="govuk-heading-l govuk-!-margin-bottom-4">
        Standard {{ standard.number }}: {{ standard.name }}
      </h2>
      
      <div class="govuk-grid-row govuk-!-margin-bottom-6">
        <div class="govuk-grid-column-two-thirds">
          {% if standardSummary %}
            <p class="govuk-body-l">
              <strong>Compliance confidence:</strong> 
              {{ renderStatusTag(standardSummary.aggregatedStatus) }}
            </p>
            
            {% if standardSummary.lastUpdated %}
              <p class="govuk-body-s govuk-!-margin-bottom-0">
                Last updated: {{ standardSummary.lastUpdated | formatDate }}
              </p>
            {% endif %}
          {% else %}
            <p class="govuk-body-l">
              <strong>Compliance confidence:</strong> 
              {{ renderStatusTag('NOT_ASSESSED') }}
            </p>
          {% endif %}
        </div>
        
        <div class="govuk-grid-column-one-third">
          {% if isAuthenticated %}
            {{ govukButton({
              text: "Add Assessment",
              href: "/projects/" + project.id + "/assessment",
              classes: "govuk-button--secondary"
            }) }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {% if assessments and assessments.length > 0 %}
        <ul class="govuk-list">
          {% for assessment in assessments %}
            <li class="profession-assessment govuk-!-margin-bottom-6">
              <h3 class="govuk-heading-s govuk-!-margin-bottom-3">
                {{ assessment.professionDisplayName }}
              </h3>
              
              <div class="govuk-!-margin-bottom-2">
                Compliance confidence: {{ renderStatusTag(assessment.status or 'NOT_UPDATED') }}
              </div>
              
              {% if assessment.commentary %}
                <div class="govuk-!-margin-bottom-2">
                  Commentary: {{ assessment.commentary }}
                </div>
              {% endif %}
              
              <div class="govuk-body-s govuk-!-margin-bottom-2">
                Last updated: 
                {% if assessment.lastUpdated %}
                  {{ assessment.lastUpdated | formatDate }}
                {% else %}
                  Not available
                {% endif %}
              </div>
              
              {% if isAuthenticated and assessment.mostRecentHistoryId %}
                <div class="profession-actions">
                  <a href="/projects/{{ project.id }}/standards/{{ standard.id }}/professions/{{ assessment.professionId }}/history/{{ assessment.mostRecentHistoryId }}/archive?returnTo=standard" class="govuk-link">Archive</a>
                </div>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <div class="govuk-inset-text">
          <p class="govuk-body">No profession assessments have been added for this standard yet.</p>
          {% if isAuthenticated %}
            <div class="govuk-!-margin-top-3">
              {{ govukButton({
                text: "Add First Assessment",
                href: "/projects/" + project.id + "/assessment",
                classes: "govuk-button--secondary"
              }) }}
            </div>
          {% endif %}
        </div>
      {% endif %}

    </div>
  </div>
{% endblock %}

{% block pageStyles %}
<style>
  .inline-heading {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
  }

  .profession-assessment {
    border-left: 4px solid #b1b4b6;
    padding-left: 20px;
    margin-left: 10px;
    background-color: #f8f8f8;
    padding: 20px;
    border-radius: 4px;
    position: relative;
    counter-increment: profession-counter;
    border-bottom: 1px solid #b1b4b6;
    margin-bottom: 30px !important;
  }

  .profession-assessment:last-child {
    border-bottom: none;
  }

  .profession-assessment::before {
    content: counter(profession-counter);
    position: absolute;
    left: -15px;
    top: 20px;
    background: #1d70b8;
    color: white;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 16px;
  }

  .govuk-list {
    counter-reset: profession-counter;
  }

  .profession-assessment h3 {
    border-bottom: 1px solid #b1b4b6;
    padding-bottom: 8px;
  }

  .profession-actions {
    margin-top: 15px;
    padding-top: 10px;
    border-top: 1px solid #e5e5e5;
  }
</style>
{% endblock %} 