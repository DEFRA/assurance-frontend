{% extends 'layouts/page.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ appHeading({
        text: project.name,
        classes: "govuk-heading-xl govuk-!-margin-bottom-2 govuk-!-word-break-word"
      }) }}
      <p class="govuk-body">
        A technical assessment of this project's compliance with service standards and best practices.
      </p>
    </div>
    <div class="govuk-grid-column-one-third">
      <div class="app-status-container">
        <h2 class="govuk-heading-s govuk-!-margin-bottom-2">OVERALL CCTS STATUS</h2>
        <strong class="govuk-tag
          {% if project.status === 'RED' %}govuk-tag--red
          {% elif project.status === 'AMBER' %}govuk-tag--yellow
          {% elif project.status === 'GREEN' %}govuk-tag--green
          {% endif %}">
          {{ project.status }}
        </strong>
      </div>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h2 class="govuk-heading-m">Project Commentary</h2>
      <div class="govuk-body-s govuk-!-margin-bottom-2">
        Last updated: {{ project.lastUpdated }} - 
        <a href="/projects/{{ project.id }}/history" class="govuk-link govuk-link--no-visited-state">
          View history
        </a>
      </div>
      <p class="govuk-body">{{ project.commentary }}</p>

      <div class="govuk-summary-card">
        <div class="govuk-summary-card__title-wrapper">
          <h2 class="govuk-summary-card__title">Service Standard Progress</h2>
        </div>
        <div class="govuk-summary-card__content">
          <p class="govuk-body">View and manage the project's progress against each service standard.</p>
          <a href="/projects/{{ project.id }}/standards" class="govuk-button">
            View Standards Progress
          </a>
        </div>
      </div>

      {{ govukButton({
        text: "Edit project",
        href: "/projects/" + project.id + "/edit",
        classes: "govuk-button--secondary govuk-!-margin-top-4"
      }) }}
    </div>
  </div>
{% endblock %}

{% block pageStyles %}
<style>
  .app-status-container {
    border: 2px solid #0b0c0c;
    padding: 15px;
    text-align: center;
  }
  
  .app-tag-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 8px;
  }
  
  .app-tag-list .govuk-tag {
    margin: 0;
    white-space: nowrap;
  }
</style>
{% endblock %} 